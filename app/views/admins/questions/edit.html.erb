<div class="container">
  <div class="row mt-5">
    <h4>質問内容編集</h4>
  </div>

  <div class="row mt-3">
    <div class="new-question-box">
      <%= form_with model: @question, url: admins_question_path(@question.id), local:true do |f| %>
        <div class="d-inline-block">
          <%= f.text_field :question %>
        </div>
        <div class="d-inline-block ml-5">
          <%= f.submit "更新する", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>