<div class="container sm-12 md-8 lg-5 px-5 px-sm-0">
  <div class="row mt-5">
    <h2>投稿編集</h2>
  </div>

  <div class="row mt-3">

    <div class="article-form">
      <%= form_with model: @article, url: admins_article_path(@article.id), local:true do |f| %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class:"form-control ml-3" %>
        </div>

        <div class="form-grouu">
          <%= f.label :body, "本文" %>
          <%= f.text_area :body, class:"form-control ml-3" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :category_id, "カテゴリー" %>
          <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "選択してください。" %>
        </div>

        <div class="from-group">
          <%= f.label :image_id, "画像" %>
          <%= f.attachment_field :image, class:"mt-3 ml-5" %>
        </div>


        <div class="action">
          <%= f.submit "更新する", class:"btn btn-success mt-5" %>
        </div>
      <% end %>
    </div>

  </div>

</div>