<div class="container sm-12 md-8 lg-5 px-5px-sm-0">

  <div class="row mt-5">

    <div class="article-box">
        <h2 class="mb-3"><%= @article.title %></h2>

        <%= attachment_image_tag @article, :image, :fill, 800, 500 %>

        <p><%= @article.body %></p>

        <p class="d-inline-block mt-3">カテゴリー：<%= @article.category.name%></p>
        <p class="d-inline-block ml-3">更新日：<%= @article.created_at.strftime("%Y/%m/%d %H:%M") %></p>

        <div class="link-btn">
          <%= link_to "編集", edit_admins_article_path(@article.id), class:"btn btn-success" %>
          <%= link_to "削除", admins_article_path(@article.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger" %>
        </div>
    </div>

  </div>
  <div class="row mt-5">
    <div class="link-btn mx-auto">
      <%= link_to "TOPに戻る", admins_top_path, class:"btn btn-primary" %>
    </div>
  </div>

</div>