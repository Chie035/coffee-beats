<div class="container sm-12 md-8 lg-5 px-5 px-sm-0">

  <div class="row mt-5">
    <h4>ユーザー一覧</h4>
  </div>

  <div class="row mt-3">
    <div class="users-table col-md-8 mx-auto">
      <table class="table">
        <thead>
          <tr class="table-active">
            <th>ID</th>
            <th>Name</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @users.each do |user| %>
                <td width="100"><%= user.id %></td>
                <td><%= user.name %></td>
              <% if user.is_active == true %>
                <td class="text-success">有効</td>
              <% else %>
                <td>退会</td>
              <% end %>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>