<div class="container">

  <div class="row mt-5">
    <h2>カテゴリー一覧・登録</h2>
  </div>

  <div class="row mt-5">
    <div class="new-category-form">
      <%= form_with model: @category, url: admins_categories_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, "カテゴリー名", class:"d-inline-block" %>
          <%= f.text_field :name, class:"d-inline-block ml-3" %>
          <%= f.submit "新規登録", class:"btn btn-success d-inline-block ml-4" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="category-table col-md-5">
      <table class="table">
        <thead>
          <tr class="table-active">
            <th>Category</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @categories.each do |category| %>
              <td><%= category.name %></td>
              <td><%= link_to "編集する", edit_admins_category_path(category.id), class:"btn btn-success ml-5"%></td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>