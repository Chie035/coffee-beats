<div class="container px-5">
    <div class="row mt-3">
        <div class="mx-auto text-center">
            <h2>CoffeeBeats AdminsPage</h2>
        </div>
    </div>

    <div class="row mt-5">
        <div class="link-btn px-5">
            <%= link_to "記事を追加", new_admins_article_path, class:"btn btn-primary ml-5" %>
            <%= link_to "カテゴリー一覧", admins_categories_path, class: "btn btn-info ml-3" %>
        </div>
        <div class="article-table col-md-10 mt-3 mx-auto">
            <table class="table">
                <thead>
                    <tr class="table-active">
                        <th>ID</th>
                        <th>Title</th>
                        <th colspan="2"></th>
                        <th>Created</th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% @articles.each_with_index do |article, i| %>
                            <td><%= i + 1 %></td>
                            <td>
                                <%= link_to admins_article_path(article.id) do %>
                                <%= article.title %>
                                <% end %>
                            </td>
                            <td colspan="2"></td>
                            <td><%= article.created_at.strftime("%Y/%m/%d") %></td>

                            <td>
                                <%= link_to "編集", edit_admins_article_path(article.id), class:"btn btn-success" %>
                            </td>
                            <td>
                                <%= link_to "削除", admins_article_path(article.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger" %>
                            </td>
                    </tr>
                        <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>