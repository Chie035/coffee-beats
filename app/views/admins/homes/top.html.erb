<div class="container px-5">
    <div class="row mt-3">
        <div class="mx-auto text-center">
            <h2>CoffeeBeats AdminsPage</h2>
        </div>
    </div>

    <div class="row mt-5">
        <div class="article-table col-md-10 mx-auto">
            <table class="table">
                <thead>
                    <tr class="table-active">
                        <th>ID</th>
                        <th>Title</th>
                        <th colspan="2"></th>
                        <th>Created</th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% @articles.each do |article| %>
                            <td><%= article.id %></td>
                            <td>
                                <%= link_to admins_article_path(article.id) do %>
                                <%= article.title %>
                                <% end %>
                            </td>
                            <td colspan="2"></td>
                            <td><%= article.created_at.strftime("%Y/%m/%d") %></td>

                            <td>
                                <a class="btn btn-success px-3" href="#">編集</a>
                            </td>
                            <td>
                                <%= link_to "削除", admins_article_path(article.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger" %>
                            </td>
                    </tr>
                        <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>