<div class="container sm-12 md-8 lg-5 px-5 px-sm-0">

  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @user, :profile_image, :fill, 200, 200 %>
    </div>

    <div class-"col-md-6 offset-2">
      <table class="table">
        <tbody>
          <tr>
            <th>名前</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>
          <tr>
            <% if @user.id == current_user.id %>
              <th></th>
              <td>
                <%= link_to "編集", edit_user_path(@user.id), class:"btn btn-success" %>
                <%= link_to "退会", resign_users_path, class:"btn btn-danger" %>
              </td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>