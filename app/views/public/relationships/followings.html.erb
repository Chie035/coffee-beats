<div class="container sm-12 md-8 lg-5 px-5 px-sm-0">

    <div class="row mt-5">
        <h2 class="mx-auto">Follower Users</h2>
    </div>

    <div class="row mt-3">
        <% if @users.exists? %>
            <div class="foloow-box mx-auto">
                <table class="table">
                    <thead>
                        <tr class="table-active">
                            <th>ID</th>
                            <th>Name</th>
                            <th colspan="2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each_with_index do |user, i| %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= user.name %></td>
                                <td>フォロー数：<%= user.followings.count %></td>
                                <td>フォロワー数：<%= user.followers.count %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        <% else %>
            <p>ユーザーはいません。</p>
        <% end %>
    </div>

</div>