<div class="container px-5">
  
  <div class="row mt-5">
    <h3 >新規登録</h3>
  </div>

  <div class="row mt-3">
      <%= form_with model: @user, url: user_registration_path, id: "new-user", class:"new-user", local:true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像" %><br />
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        </div>

        <div class="form-group">
          <%= f.label :name, "ユーザーネーム" %><br />
          <%= f.text_field :name, autofocus: true, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      <% end %>
  </div>
  <div class="row">
        <div class="login-link">
          <p>登録済みの方は<%= link_to "こちら", new_user_session_path %></p>
        </div>
  </div>

</div>
